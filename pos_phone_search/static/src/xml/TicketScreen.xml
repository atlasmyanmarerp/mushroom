<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve">

    <t t-name="PosPhoneSearch" t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('orders')]/div[hasclass('header-row')]/div[hasclass('start')][3]" position="after">
             <div class="col start">Phone</div>
        </xpath>
        <xpath expr="//div[hasclass('pointer')]/div[hasclass('start')][3]" position="after">
             <div class="col start">
                 <t t-esc="getCustomerPhone(order)"></t>
             </div>
        </xpath>
    </t>
</template>
